{
  "name": "@kocal/web-extension-library",
  "version": "1.0.0-alpha",
  "description": "A set of functions used for easily write a web extension",
  "repository": "https://github.com/Kocal-Web-Extensions/library.git",
  "author": "Hugo Alliaume <kocal@live.fr>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "src",
    "!src/**/*.test.ts",
    "dist",
    "types/*.d.ts"
  ],
  "typings": "types/index.ts",
  "scripts": {
    "prepare": "yarn lint && yarn test:unit && yarn test:types && yarn build",
    "release": "standard-version",
    "build": "rimraf dist && tsc --build tsconfig.build.json",
    "lint": "tslint --project tsconfig.json",
    "test:unit": "jest",
    "test:types": "tsc --build types/test/tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.73",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "jest-webextension-mock": "^3.4.0",
    "lint-staged": "^8.0.0-beta.1",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
