{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "types/overrides.d.ts"
  ]
}
